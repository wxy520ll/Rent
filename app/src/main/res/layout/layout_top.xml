<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
                android:gravity="center"
               android:layout_gravity="center_horizontal"
              android:layout_width="match_parent"
              android:layout_height="42dp">

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/tv_scan"
        android:drawablePadding="2dp"
        android:layout_marginTop="6dp"
       android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/ag0"
            android:layout_width="18dp"
            android:layout_height="18dp"/>
        <TextView
            android:textSize="11sp"
            android:text="扫一扫"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/tv_msg"
        android:orientation="vertical"
        android:paddingRight="5dp"
        android:drawablePadding="2dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="6dp"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/afc"
            android:layout_width="18dp"
            android:layout_height="18dp"/>
        <TextView
            android:textSize="11sp"
            android:text="消息"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

        <EditText
            android:id="@+id/ed_content"
            android:layout_alignTop="@id/tv_scan"
            android:layout_toRightOf="@id/tv_scan"
            android:layout_toLeftOf="@id/tv_msg"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/layout_top_edit_bg"
            android:paddingLeft="10dp"
            android:textColor="@color/drak_bg"
            android:drawablePadding="4dp"
            android:textSize="13dp"
            android:layout_marginBottom="6dp"
            android:singleLine="true"
            android:hint="安德玛 超级品牌日 不止五折"
            android:layout_centerVertical="true"
            android:drawableLeft="@mipmap/afh"
            android:layout_width="match_parent"
            android:layout_height="38dp"/>

</RelativeLayout>